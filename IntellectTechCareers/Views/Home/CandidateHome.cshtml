
@{
    ViewBag.Title = "Candidate Home";
    IntellectTechCareers.Models.User user = (IntellectTechCareers.Models.User)Session["user"];
    Layout = "~/Views/Shared/_LayoutPageCandidate.cshtml";
}

<h2>Candidate Dashboard</h2>

<h3>Welcome,  @user.name </h3>
<br />
<h3>Account status : 

@{
    if(@user.state.Equals("active"))
    {
        <font color="green">@user.state </font>
    }
    else
    {
        <font color="red">@user.state </font>
    }
}


</h3>
@using (Html.BeginForm("ViewJobDetails", "Candidate", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <h3>View Job applications :  <input type="submit" value="View Job applications" /> </h3>
    </fieldset>
}

@using (Html.BeginForm("UpdateProfile", "Candidate", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <h3> Update your profile : <input type="submit" value="Update Profile" /> </h3>
    </fieldset>
}
